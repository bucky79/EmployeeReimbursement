<div id="container">
    <h1>Login</h1>
    <div class="login-form">
        <%= form_with url: "login/login", method: :post, scope: false do |f| %>
        <div class="field">
            <%= f.label :email %>
            <%= f.text_field :email %>
        </div>

        <div class="field">
            <%= f.label :password %>
            <%= f.password_field :password %>
        </div>

        <div class="actions">
            <%= f.submit "Login" %>
        </div>
        <% end %>
    </div>
</div>